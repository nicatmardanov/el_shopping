
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


@using elite_shopping.Models;

<div class="product-block">
    <div class="pro-head">
        <h2>My Products</h2>
    </div>

    @{
        user us = elite_shopping.Classes.connection.el_entities.user.FirstOrDefault(x => x.name == User.Identity.Name);

        foreach (product pr in Model)
        {
            var pic = pr.picture.FirstOrDefault(x => x.product_id == pr.id);

            <div class="col-md-3 product-grid">
                <div class="product-items">
                    <div class="project-eff">
                        <div id="nivo-lightbox-demo"> <p> <a href="@pic.medium" data-lightbox-gallery="gallery1" id="nivo-lightbox-demo"><span class="rollover1"> </span> </a></p></div>
                        <img class="img-responsive" src="@pic.medium" alt="">
                    </div>
                    <div class="produ-cost">
                        <h4>@pr.name</h4>
                        <h5>@pr.price Manat</h5>
                    </div>
                </div>
            </div>
        }
    }

    

    

    <div class="clearfix"> </div>
</div>